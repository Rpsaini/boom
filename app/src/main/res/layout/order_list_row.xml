<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_open_order_list_row"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_weight="0.2">

                <fontspackageForTextView.BoldMedium
                    android:id="@+id/txt_subpair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    >
                </fontspackageForTextView.BoldMedium>

                <fontspackageForTextView.Regular
                    android:id="@+id/txt_mainpar"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="/"
                    android:textSize="12dp"
                    android:textColor="@color/grey_dark"
                    >
                </fontspackageForTextView.Regular>



            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_weight="0.8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <fontspackageForTextView.BoldMedium
                                android:id="@+id/txt_side"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="5dp"
                                android:maxLines="1"
                                android:text="10"
                                android:textAllCaps="true"
                                android:textColor="@color/dark_blue"
                                android:textSize="12dp"
                                android:textStyle="bold"></fontspackageForTextView.BoldMedium>


                            <fontspackageForTextView.BoldMedium
                                android:id="@+id/txt_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="5dp"
                                android:maxLines="1"
                                android:text="10"
                                android:textColor="@color/dark_blue"
                                android:textSize="17dp"
                                android:textStyle="bold"></fontspackageForTextView.BoldMedium>

                            <fontspackageForTextView.BoldMedium

                                android:id="@+id/txt_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:maxLines="1"
                                android:text="(24,7999)"
                                android:textColor="@color/grey_dark"
                                android:textSize="14dp"
                                android:textStyle="bold"></fontspackageForTextView.BoldMedium>


                        </LinearLayout>

                        <fontspackageForTextView.Regular
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/grey_dark"
                            android:textSize="12dp"></fontspackageForTextView.Regular>


                        <fontspackageForTextView.Regular
                            android:id="@+id/txt_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/grey_dark"
                            android:textSize="12dp"
                            android:visibility="gone"></fontspackageForTextView.Regular>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center|end"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_corner_drawable"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingEnd="5dp"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:textColor="@color/white_20"
                        android:textSize="11dp"></TextView>


                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/lite_background"
        ></View>


</LinearLayout>