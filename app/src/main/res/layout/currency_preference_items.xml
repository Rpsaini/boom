<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:id="@+id/ll_fund_list_row"
    android:layout_height="60dp">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_currencyicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_thether"></ImageView>

            <fontspackageForTextView.Regular
                android:id="@+id/txt_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:alpha="0.6"
                android:paddingStart="10dp"
                android:text="Btc"
                android:textAllCaps="true"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/text_size"></fontspackageForTextView.Regular>
        </LinearLayout>
<!--

        <fontspackageForTextView.Regular
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/ic_more"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/textcolor"
            android:alpha="0.6"
            android:textSize="@dimen/text_size"></fontspackageForTextView.Regular>
-->

        <ImageView
            android:id="@+id/selectIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_switch_off"></ImageView>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        ></View>


</LinearLayout>
