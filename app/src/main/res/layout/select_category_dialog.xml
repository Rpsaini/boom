<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_relativelayout"
    >


    <LinearLayout
        android:id="@+id/ll_iiner"
        android:background="@drawable/drawable_upper_round"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ImageView
            android:padding="10dp"
            android:id="@+id/img_hideview"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_dropdown"
            ></ImageView>

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <fontspackageForTextView.BoldMedium
                android:id="@+id/select_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_category"
                android:textSize="22sp"
                />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="@color/black"
                android:layout_marginTop="15dp"
                ></View>

            <TextView
                android:id="@+id/select_sub_title"
                android:gravity="center|left"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                style="@style/edittext_style_14_black"
                android:text="@string/select_any_two"
                ></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:visibility="gone"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                ></View>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="55dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/select_category_recycler"
                ></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </LinearLayout>


    <fontspackageForTextView.Regular
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center"
        android:id="@+id/tv_done"
        android:background="@drawable/drawable_button_skyblue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/done" />
</RelativeLayout>