<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_20"

    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_back"
        android:padding="10dp"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:src="@drawable/arrow"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp">
    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:visibility="gone"
            android:id="@+id/login_back"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_up_arrow"
            android:rotation="90"
            app:tint="@color/hintTextColor"></ImageView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo"></ImageView>

        <fontspackageForTextView.Regular
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Keys"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            ></fontspackageForTextView.Regular>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >


            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Registered Email to get keys"
                android:textColor="@color/black"
                android:alpha="0.6"
                android:textSize="@dimen/small_text_size"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/ed_email"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Email"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/hintTextColor"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                ></fontpackageforEdittext.Regular>

            <!--      S3ROT51Bn9VNjOK0fuEB-->
            <fontspackageForTextView.Regular
                android:id="@+id/btn_getkeys"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                android:text="Submit"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:background="@drawable/green_drawable"
                ></fontspackageForTextView.Regular>





        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>