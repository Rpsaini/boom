<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_fund_list_row"
    android:layout_height="60dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_currencyicon"
                ></ImageView>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
            <fontspackageForTextView.BoldMedium
                android:paddingStart="10dp"
                android:id="@+id/txt_currency_name"
                android:layout_width="wrap_content"
                android:text="Btc"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/black"
                ></fontspackageForTextView.BoldMedium>

                    <fontspackageForTextView.BoldMedium
                        android:paddingStart="3dp"
                        android:id="@+id/txt_currency_fullname"
                        android:layout_width="wrap_content"
                        android:text="Btc"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:alpha=".5"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/black"
                        ></fontspackageForTextView.BoldMedium>
                </LinearLayout>



                <fontspackageForTextView.Regular
                    android:paddingRight="70dp"
                    android:paddingStart="10dp"
                    android:id="@+id/txt_currency_price"
                    android:layout_width="match_parent"
                    android:text="23,0909"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/small_text_size"
                    android:alpha="0.6"
                    android:textColor="@color/black"
                    ></fontspackageForTextView.Regular>
            </LinearLayout>
        </LinearLayout>

        <fontspackageForTextView.Regular
            android:id="@+id/tv_buy"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/green_drawable"
            android:gravity="center"
            android:text="Buy"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"></fontspackageForTextView.Regular>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:alpha="0.2"
        android:background="@color/black"
        >
    </View>



</LinearLayout>

