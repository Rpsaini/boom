<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"

        >
    <ImageView
        android:id="@+id/img_back"
        android:padding="10dp"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:src="@drawable/arrow"
        android:tint="@color/white"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp">
    </ImageView>




          <fontspackageForTextView.BoldMedium
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textColor="@color/white"
                android:textSize="20dp"

                android:gravity="center"
                ></fontspackageForTextView.BoldMedium>

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo"></ImageView>




            <fontspackageForTextView.Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <!--      //dlNpTUkrT3lWSXZoSVBFY052N0RNd2Q5RG9EcGpMMjRCQnFETHNVTmxKcz0=-->








            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <fontpackageforEdittext.Regular
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:id="@+id/txt_fname"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_drawable"
                    android:hint="Name"
                    android:singleLine="true"
                    android:textColorHint="@color/grey_dark"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textCursorDrawable="@color/white"
                    android:paddingRight="30dp"
                    ></fontpackageforEdittext.Regular>


            </RelativeLayout>

            <fontspackageForTextView.Regular
                android:visibility="gone"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:visibility="gone"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:id="@+id/txt_lastname"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Last Name"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>



            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_email"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Email"
                android:maxLines="1"
                android:textCursorDrawable="@color/white"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/white"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>



            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_drawable"
                >

                <com.hbb20.CountryCodePicker
                    app:ccp_contentColor="@color/white"
                    android:id="@+id/ccp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

            <fontpackageforEdittext.Regular
                android:maxLength="11"
                android:id="@+id/txt_phonenumber"
                android:paddingLeft="5dp"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Phone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textCursorDrawable="@color/white"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/white"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>

            </LinearLayout>

            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_username"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Username"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_dark"
                android:textCursorDrawable="@color/white"
                android:textColor="@color/white"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>




            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_password"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textCursorDrawable="@color/white"
                ></fontpackageforEdittext.Regular>


            <fontspackageForTextView.Regular
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passwordrule"
                android:textColor="@color/grey_dark"
                android:textSize="10dp"
                ></fontspackageForTextView.Regular>




            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_conf_password"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Confirm Passowrd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textCursorDrawable="@color/white"
                ></fontpackageforEdittext.Regular>



            <fontspackageForTextView.Regular
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sponsor Code"
                android:textColor="@color/grey_dark"
                android:textSize="12dp"
                ></fontspackageForTextView.Regular>

            <fontpackageforEdittext.Regular
                android:id="@+id/txt_referral_code"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Optional"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/white"
                android:textSize="14dp"
                ></fontpackageforEdittext.Regular>


            <include layout="@layout/google_captcha_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_marginLeft="3dp"
                    android:id="@+id/checkbox_tems"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:foregroundTint="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_gravity="center"></CheckBox>

                <fontspackageForTextView.Regular
                    android:paddingLeft="5dp"
                    android:id="@+id/termsandcondtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="13dp"
                    android:text="By continuing, you agree to our Term of Service "
                    android:textColor="@color/white_20"></fontspackageForTextView.Regular>

                <fontspackageForTextView.Regular
                    android:id="@+id/privacyPolicy"
                    android:textSize="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Privacy Policy"
                    android:textColor="@color/white"></fontspackageForTextView.Regular>

            </LinearLayout>

            <fontspackageForTextView.Regular
                android:enabled="false"
                android:alpha=".7"
                android:layout_marginBottom="20dp"
                android:id="@+id/login_register"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="Register"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:background="@drawable/green_drawable"
                ></fontspackageForTextView.Regular>




        </LinearLayout>

    </ScrollView>
</LinearLayout>

